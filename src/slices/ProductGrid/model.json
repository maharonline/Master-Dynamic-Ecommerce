      "primary": {
        "section_title": {
          "type": "Text",
          "config": {
            "label": "Section Title"
          }
        },
        "products": {
          "type": "Group",
          "config": {
            "label": "Products",
            "fields": {
              "image": {
                "type": "Image",
                "config": {
                  "label": "Product Image"
                }
              },
              "name": {
                "type": "Text",
                "config": {
                  "label": "Product Name"
                }
              },
              "description": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Short Description"
                }
              },
              "price": {
                "type": "Number",
                "config": {
                  "label": "Price"
                }
              },
              "is_exclusive": {
                "type": "Boolean",
                "config": {
                  "label": "Exclusive"
                }
              },
