                "config": {
                  "label": "Color Options",
                  "constraint": {},
                  "thumbnails": [
                    {
                      "name": "main2",
                      "width": 75,
                      "height": 75
                    }
                  ]
                }
              },
              "engraving_available": {
                "type": "Boolean",
                "config": {
                  "label": "Engraving Available",
                  "placeholder_false": "false",
                  "placeholder_true": "true",
                  "default_value": false
                }
              }
            }
          }
        },
        "icon": {
          "type": "Image",
          "config": {
            "label": "icon",
            "constraint": {},
            "thumbnails": []
          }
        }
      },
      "items": {}
